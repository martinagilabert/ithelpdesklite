<odoo>
    <record id="view_it_ticket_tree" model="ir.ui.view">
        <field name="name">it.ticket.list</field>
        <field name="model">it.ticket</field>
        <field name="arch" type="xml">
            <list decoration-danger="is_overdue == True">
                <field name="name"/>
                <field name="user_id"/>
                <field name="priority" widget="priority"/>
                <field name="stage_id"/>
                <field name="deadline"/>
                <field name="is_overdue" invisible="1"/>
            </list>
        </field>
    </record>

    <record id="view_it_ticket_form" model="ir.ui.view">
        <field name="name">it.ticket.form</field>
        <field name="model">it.ticket</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_assign_me" string="Asignarme" type="object" class="oe_highlight"/>
                    <field name="stage_id" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="user_id"/>
                            <field name="equipment_id"/>
                            <field name="priority" widget="priority"/>
                        </group>
                        <group>
                            <field name="sla_hours"/>
                            <field name="deadline"/>
                            <field name="is_overdue"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="DescripciÃ³n">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_it_ticket_kanban" model="ir.ui.view">
        <field name="name">it.ticket.kanban</field>
        <field name="model">it.ticket</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage_id" class="o_kanban_small_column">
                <field name="stage_id"/>
                <field name="priority"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <strong><field name="name"/></strong>
                                <div><field name="user_id"/></div>
                                <div class="float-right">
                                    <field name="priority" widget="priority"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_it_ticket" model="ir.actions.act_window">
        <field name="name">Incidencias IT</field>
        <field name="res_model">it.ticket</field>
        <field name="view_mode">kanban,list,form</field>
    </record>

    <record id="view_it_ticket_search" model="ir.ui.view">
    <field name="name">it.ticket.search</field>
    <field name="model">it.ticket</field>
    <field name="arch" type="xml">
        <search>
            <field name="name"/>
            <field name="equipment_id"/>
            <field name="user_id"/>
            <filter string="Mis Tickets" name="my_tickets" domain="[('user_id', '=', uid)]"/>
            <filter string="Vencidos" name="overdue" domain="[('is_overdue', '=', True)]"/>
            <group expand="0" string="Agrupar por">
                <filter string="Estado" name="group_by_stage" context="{'group_by': 'stage_id'}"/>
                <filter string="Prioridad" name="group_by_priority" context="{'group_by': 'priority'}"/>
            </group>
        </search>
    </field>
</record>

</odoo>